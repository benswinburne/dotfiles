# vi:syntax=sh

export PATH=${HOME}/.npm-packages/bin:$PATH
export PATH=./node_modules/.bin:$PATH
export PATH="$PATH:`yarn global bin`"

__ORIG_PATH=$PATH
function cd {
  NPMBIN=$(realpath "$@")/node_modules/.bin
  if [ -d "$NPMBIN" ]; then
   export PATH=$NPMBIN:$__ORIG_PATH
  fi

  command cd "$@";
}
